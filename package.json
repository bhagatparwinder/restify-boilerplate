{
  "name": "microservice-boilerplate",
  "version": "0.3.0",
  "description": "restify microservice boilerplate",
  "main": "src/index.js",
  "repository": "git@github.com:shellthor/microservice-boilerplate.git",
  "author": "Jeff Detmer <jeff.detmer@gmail.com>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "^6.10.3",
    "npm": "^3.10.8"
  },
  "scripts": {
    "prebuild": "yarn run build:clean",
    "build": "babel src -d dist --source-maps",
    "build:clean": "rimraf ./dist",
    "clean": "yarn cache clean && rimraf node_modules doc coverage dist",
    "precommit": "yarn run lint:staged",
    "commit": "git-cz",
    "contributor:add": "all-contributors add",
    "contributor:generate": "all-contributors generate",
    "debug": "cross-env NODE_ENV=local babel-node src/index --inspect=5858 | bunyan",
    "docker:bash": "docker exec -t -i microservice-boilerplate bash",
    "docker:build": "docker build -t microservice-boilerplate .",
    "docker:ssh": "yarn run docker:bash",
    "docker:start": "docker run --name microservice-boilerplate -p 10000:10000 -e cross-env NODE_ENV=production -d microservice-boilerplate",
    "docker:stop": "docker stop microservice-boilerplate && docker rm microservice-boilerplate",
    "info": "npm-scripts-info",
    "lint": "yarn run lint:es",
    "lint:es": "yarn run lint:eslint -- . ",
    "lint:eslint": "eslint --ignore-path .gitignore --ignore-pattern internals/scripts --format=node_modules/eslint-formatter-pretty",
    "lint:fix": "yarn run lint:eslint -- --fix .",
    "lint:staged": "lint-staged",
    "pm2:start": "yarn run build && pm2 startOrReload ecosystem.config.js",
    "pm2:status": "pm2 status",
    "pm2:stop": "pm2 stop ecosystem.config.js && pm2 delete ecosystem.config.js",
    "prettier": "prettier --trailing-comma es5 --single-quote --write 'src/**/*.js'",
    "postprettier": "yarn run lint:fix",
    "release": "standard-version",
    "reportcoverage": "codecov",
    "setup": "npm i shelljs workshop-setup babel-preset-env babel-cli && babel-node ./internals/scripts/setup.js",
    "start": "yarn run start:dev",
    "start:dev": "cross-env NODE_ENV=local cross-env PORT=8000 nodemon src/index --exec babel-node | bunyan",
    "pretest": "yarn run test:clean && yarn run lint",
    "test": "cross-env NODE_ENV=test jest --coverage",
    "test:clean": "rimraf ./coverage",
    "test:watch": "cross-env NODE_ENV=test jest --watchAll"
  },
  "lint-staged": {
    "*.@(js)": [
      "prettier --trailing-comma es5 --single-quote --write",
      "eslint --ignore-pattern internals/scripts --fix",
      "git add"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "plugin:jest/recommended",
      "airbnb-base"
    ],
    "env": {
      "node": true,
      "es6": true,
      "jest": true,
      "jest/globals": true
    },
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module"
    },
    "plugins": [
      "jest"
    ],
    "rules": {
      "arrow-parens": [
        "error",
        "always"
      ],
      "arrow-body-style": [
        2,
        "as-needed"
      ],
      "comma-dangle": [
        2,
        "always-multiline"
      ]
    }
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "stage-0"
    ],
    "env": {
      "test": {
        "plugins": [
          "dynamic-import-node"
        ]
      }
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,js,jsx}",
      "!src/**/*.test.{ts,js,jsx}",
      "!src/index.{ts,js,jsx}",
      "!src/server.{ts,js,jsx}",
      "!src/lib/database.{ts,js,jsx}",
      "!src/lib/sworm.{ts,js,jsx}"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 75,
        "branches": 75,
        "functions": 75,
        "lines": 75
      }
    },
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "testRegex": "src/.*\\.test\\.js$",
    "testEnvironment": "node"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "pkg": {
    "targets": [
      "node6-linux-x64",
      "node6-windows-x64"
    ]
  },
  "dependencies": {
    "axios": "^0.16.0",
    "bluebird": "^3.5.0",
    "bunyan": "^1.8.9",
    "confidence": "^3.0.2",
    "cross-env": "^5.0.0",
    "joi": "^10.5.0",
    "jsonwebtoken": "^7.4.1",
    "lodash": "^4.17.4",
    "mongoose": "^4.10.0",
    "mysql": "^2.13.0",
    "restify": "^4.3.0",
    "slug": "^0.9.1",
    "sworm": "^3.6.0"
  },
  "devDependencies": {
    "all-contributors-cli": "^4.3.0",
    "axios-mock-adapter": "^1.8.1",
    "babel-cli": "^6.24.0",
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-plugin-dynamic-import-node": "^1.0.2",
    "babel-preset-env": "^1.4.0",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.24.0",
    "chalk": "^1.1.3",
    "codecov": "^2.2.0",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-formatter-pretty": "^1.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jest": "^20.0.3",
    "husky": "^0.13.3",
    "jest-cli": "^20.0.3",
    "lint-staged": "^3.4.2",
    "nodemon": "^1.11.0",
    "pkg": "^3.0.4",
    "pre-commit": "^1.2.2",
    "prettier": "^1.3.0",
    "rimraf": "^2.6.1",
    "shelljs": "^0.7.7",
    "standard-version": "^4.0.0",
    "workshop-setup": "^1.1.0"
  }
}
